<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FF5722"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/prefecture"
            android:layout_width="91dp"
            android:layout_height="50dp"
            android:background="#673AB7"
            android:text="都道府県名"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgV"
            app:layout_constraintTop_toTopOf="@+id/imgV" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#2196F3"
            android:text="読み"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/prefecture"
            app:layout_constraintTop_toTopOf="@+id/imgV" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#CDDC39"
            android:fadeScrollbars="true"
            android:text="説明"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgV"
            app:layout_constraintTop_toBottomOf="@+id/prefecture" />

        <ImageView
            android:id="@+id/imgV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>